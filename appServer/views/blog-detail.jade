extends layout

block content
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        .col-xs-12.list-group-item
          h2= blog.title
            small &nbsp;
            span.badge.pull-right.badge-default= blog.modifiedOn.toLocaleString().substr(0,19)
          p.lead= blog.content
          p
            a(href="/blog?userEmail="+blog.userEmail)= blog.userName
          p
            if blog.category
              each category in blog.category
                span.label.label-warning= category
                  | &nbsp;
            span.pull-right(style="margin-left: 5px !important;")
              a(href= '/blog/delete/'+blog._id) Delete 
            span.pull-right
              a(href= '/blog/edit/'+blog._id) Edit
                
    .col-xs-12.col-sm-4
      p.lead= sidebar