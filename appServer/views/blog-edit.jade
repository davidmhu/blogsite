extends layout

block content
  .row
      .col-md-6.col-sm-12
        p.lead
          | Already a member? Please 
          a(href='/login') log in
          |  instead.
        form.form-horizontal(method= method,action = '/blog')
          .alert.alert-danger.sr-only(role='alert') 
          .form-group
            label.control-label.col-sm-2(for='title') Title
            .col-sm-10
              input#userEmail(type='hidden', name='userEmail',value= userEmail)
              input#userName(type='hidden', name='userName',value= userName)
              input#title.form-control(type='text', name='title',required)
          .form-group
            label.control-label.col-sm-2(for='content') Content
            .col-sm-10
              textarea.form-control(rows='3',name='content')
          .form-group
            label.control-label.col-sm-2(for='category') Category
            .col-sm-10
              label.checkbox-inline
                input#gender1(type='checkbox', name='category',value='Travel')
                |  Travel
              label.checkbox-inline
                input#gender2(type='checkbox', name='category',value='Tech')
                |  Tech
              label.checkbox-inline
                input#gender3(type='checkbox', name='category',value='Book')
                |  Book
              label.checkbox-inline
                input#gender3(type='checkbox', name='category',value='Food')
                |  Food
          .form-group
            .col-sm-offset-2.col-sm-10
              button.btn.btn-default(type='submit') Post!
