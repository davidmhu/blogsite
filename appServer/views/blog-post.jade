extends layout

block content
  .row
      .col-md-6.col-sm-12
        p.lead
          | Already a member? Please 
          a(href='/login') log in
          |  instead.
        form.form-horizontal(method = 'post',action = '/blog/edit')
          .alert.alert-danger.sr-only(role='alert') 
          .form-group
            label.control-label.col-sm-2(for='title') Title
            .col-sm-10
              input#title.form-control(type='text', name='title',required)
          .form-group
            label.control-label.col-sm-2(for='content') Content
            .col-sm-10
              textarea.form-control(rows='3',name='content')
          .form-group
            label.control-label.col-sm-2(for='gender') Gender
            .col-sm-10
              label.radio-inline
                input#gender1(type='radio', name='gender',value=1, checked)
                |  Male
              label.radio-inline
                input#gender2(type='radio', name='gender',value='0')
                |  Female
              label.radio-inline
                input#gender3(type='radio', name='gender',value='0')
                |  Other
          .form-group  
            label.control-label.col-sm-2(for='birthday') Birthday
            .col-sm-10
              input#birthday.form-control(type='date',name='birthday',defaultValue='2015/12/11')
          .form-group
            .col-sm-offset-2.col-sm-10
              button.btn.btn-default(type='submit') Post!
